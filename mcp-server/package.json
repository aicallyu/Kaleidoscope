{
  "name": "kaleidoscope-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for Kaleidoscope - responsive design preview tool",
  "license": "MIT",
  "bin": {
    "kaleidoscope-mcp": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "node dist/index.js",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "esbuild": "^0.19.12",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
