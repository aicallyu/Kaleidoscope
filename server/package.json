  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.11",
    "cross-env": "^10.0.0",
    "esbuild": "^0.19.12",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
